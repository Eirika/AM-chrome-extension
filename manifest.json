{
  "manifest_version": 2,

  "name": "Amoki-Music",
  "description": "Remote for Amoki-Music",
  "version": "0.1",
  "background": {
    "persistent": false,
    "scripts": ["jquery.js", "scripts.js"]
  },
  // "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/",
    "storage",
    "contextMenus"
  ]
}